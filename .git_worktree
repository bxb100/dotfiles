#!/usr/bin/env bash

# https://gist.github.com/dhh/18575558fc5ee10f15b6cd3e108ed844
# Create a new worktree and branch from within current git directory.
ga() {
  if [[ -z "$1" ]]; then
    echo "Usage: ga [branch name]"
    exit 1
  fi

  local branch="$1"
  local base="$(basename "$PWD")"
  local work_path="../${base}--${branch}"

  git worktree add -b "$branch" "$work_path"
  command mise && mise trust "$work_path"
  cd "$work_path" || return 0
}

# Remove worktree and branch from within active worktree directory.
gd() {
  if gum confirm "Remove worktree and branch?"; then
    local cwd base branch root

    cwd="$(pwd)"
    worktree="$(basename "$cwd")"

    # split on first `--`
    root="${worktree%%--*}"
    branch="${worktree#*--}"

    # Protect against accidentially nuking a non-worktree directory
    if [[ "$root" != "$worktree" ]]; then
      cd "../$root" || return 0
      git worktree remove "$worktree" --force
      git branch -D "$branch"
    fi
  fi
}
